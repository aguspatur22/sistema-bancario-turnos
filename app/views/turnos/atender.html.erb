<%= form_with model: @turno, :url => {:action => "atender", :id => @turno.id}, method: :patch do |form| %>
  <% if @turno.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@turno.errors.count, "error") %> prohibited this turno from being saved:</h2>

      <ul>
        <% @turno.errors.each do |error| %>
