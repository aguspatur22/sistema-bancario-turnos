<p style="color: green"><%= notice %></p>

<h1>Sucursales</h1>

<div id="sucursales">
  <% @sucursales.each do |sucursal| %>
    <%= render sucursal %>
    <p>
      <%= link_to "Show this sucursal", sucursal %>
    </p>
  <% end %>
</div>

<% if can? :create, Cliente %>
  <%= link_to "New sucursal", new_sucursal_path %>
<% end %>

<% if usuario_signed_in? %>
  <%= button_to "logout", destroy_usuario_session_path, method: :delete  %>
<% end %>