<style>
table.table td a.view {
    color: #03A9F4;
}
table.table td a.edit {
    color: #FFC107;
}
table.table td a.delete {
    color: #E34724;
}
</style>

<h1>Clientes</h1>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre</th>
      <th scope="col">Apellido</th>
      <th scope="col">Email</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @clientes.each_with_index do |cliente, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%=cliente.nombre%></td>
        <td><%=cliente.apellido%></td>
        <td><%=cliente.email%></td>
        <td>
          <a href="<%= cliente_path(cliente) %>" class="view" title="View" data-toggle="tooltip"><i class="material-icons">&#xE417;</i></a>
          <% if can? :edit, Cliente %>
          <a href="<%= edit_cliente_path(cliente) %>" class="edit" title="Edit" data-toggle="tooltip"><i class="material-icons">&#xE254;</i></a>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if can? :create, Cliente %>
  <%= button_to "Agregar cliente", new_cliente_path, method: :get, class: "btn btn-outline-primary" %>
<% end %>